<h1>Time Blocks</h1>
<%if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>

<%= form_tag login_path do %>
	<div class="field">
		<%= label_tag :email %>
		<%= text_field_tag :email %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div>
		<%= submit_tag "Login" %>
		<%= link_to "sign up", new_user_path %>
	</div>
<% end %>
